<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
    <title>ResourceFull</title>
  </head>

  <body>

    <%- include('partials/header') %>
    <div class="container rounded bg-white mt-5">
      <div class="row">
        <div class="col-md-4 border-right">
          <div
            class="d-flex flex-column align-items-center text-center p-3 py-5"
          >
            <img
              class="rounded-circle mt-5"
              src="/img/photoProfile.jpg"
              width="200">

              <span class="text-black-50"><%=selectedUser.username %></span>
          </div>
        </div>
        <div class="col-md-8">
          <div class="p-3 py-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="d-flex flex-row align-items-center back">
                <i class="fa fa-long-arrow-left"></i>
                <h6><a href="/">Back to home</a></h6>
              </div>
              <h6 class="text-right">Edit Profile</h6>
            </div>
          <form id="update-profile">
              <div class="col-md-6">
                <div class="row mt-2 p-1">
                <input
                  type="text"
                  class="form-control profile-form"
                  placeholder="<%=selectedUser.first_name %>" name="firstName"
                />
              </div>

              <!-- <div class="col-md-6 p-1"> -->
              <div class="row mt-2 p-1">
                <input
                  type="text"
                  class="form-control profile-form"
                  placeholder="<%=selectedUser.last_name %>" name="lastName"
                />
              </div>

              <div class="row mt-2 p-1">
                <input
                  type="password"
                  class="form-control profile-form"
                  placeholder="<%=selectedUser.password %>" name="password"
                />
              </div>

             <div class="row mt-2 p-1">
                <input
                  type="email" name="email"
                  class="form-control profile-form"
                  placeholder="<%=selectedUser.email %>"
                />
            </div>

              <div class="mt-5 text-right">
                <button class="btn btn-dark profile-button" id="editUserProfile" type="submit">
                  Save Profile
                </button>
            </div>
        </div>
      </form>
        </div>
    </div>
  </div>
  </div>

    <!-- External JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script src="../scripts/client_user_resources.js"></script>

  </body>
</html>
