<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- External Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@600&family=Titillium+Web:wght@300;700&display=swap" rel="stylesheet">

    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"/>

    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/client_user_resources.js"></script>

     <!-- CSS stylesheet links  -->
    <link rel="stylesheet" href="/styles/style.css" type="text/css"/>
    <link rel="stylesheet" href="/styles/index.css" type="text/css"/>

    <link rel="stylesheet" href="/styles/user_resources.css" type="text/css"/>

  </head>
  <body>
    <%- include('partials/header') %>

    <% if(Object.keys(userResources).length === 0) { %>
      <h2>You have not created or liked resources yet</h2>

     <%  } else { %>

    <section id="greeting">

    </section>

    <section id="main-content-resources">

      <section id="vertical-list-options">
        <ul class="list-group">
          <li class="list-group-item">
            <h1 style="color:black"> Hey  <%= userResources[0].user_name %></h1>  <!-- CHANGE THIS INLINE STYLE-->
          </li>
          <li class="list-group-item">
            <a href="#created-resources">My resources</a>
          </li>
          <li class="list-group-item">
            <a href="#liked-resources">Liked resources</a>
          </li>
        </ul>
      </section>

      <section id="user-resources">

      <section id="created-resources">

        <h2 class="main-title"> My resources </h2>


        <% for (let resource in userResources) { %>

          <div class="card-deck" data-id="<&= resources[resource].id %>">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top resource-img img-fluid" src="<%= userResources[resource].image %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title text-center"><%= userResources[resource].title%></h5>
                <div>
                  <p class="card-text"><%= userResources[resource].description %></p>
                  <p class="card-text">
                    <b>Link: </b><%= userResources[resource].url %>
                  </p>
                  <p class="card-text tag">
                    <b>Tags:</b> <%= userResources[resource].category_type %>
                  </p>
                </div>
              </div>
              <div class="card-footer">
                <!-- <div>
                  <span class="likes_id"> <%=userResources[resource].like %> </span>
                 <i class="far fa-heart" resource_id="<%=userResources[resource].id %>"></i>
              </div> -->
               <span><a href="/comments/<%=userResources[resource].id %>"><i class="far fa-comment-dots"></i></a></span>
                <!-- <i class="far fa-star star" id="<%= userResources[resource].title %>-1" title="<%= userResources[resource].title %>" resource_id="<%=userResources[resource].id %>" data-star="<%= userResources[resource].title %>-1"></i>
                <i class="far fa-star star" id="<%= userResources[resource].title %>-2" title="<%= userResources[resource].title %>" resource_id="<%=userResources[resource].id %>" data-star="<%= userResources[resource].title %>-2"></i>
                <i class="far fa-star star" id="<%= userResources[resource].title %>-3" title="<%= userResources[resource].title %>" resource_id="<%=userResources[resource].id %>" data-star="<%= userResources[resource].title %>-3"></i>
                <i class="far fa-star star" id="<%= userResources[resource].title %>-4" title="<%= userResources[resource].title %>" resource_id="<%=userResources[resource].id %>" data-star="<%= userResources[resource].title %>-4"></i>
                <i class="far fa-star star" id="<%= userResources[resource].title %>-5" title="<%= userResources[resource].title %>"  resource_id="<%=userResources[resource].id %>" data-star="<%= userResources[resource].title %>-5"></i> -->
              </div>

            </div>

            <% } %>

      </section>

      <!-- <section id="loadMore">
        <div class="loadMore-btn">
          <button type="button" class="btn btn-light">Load more ...</button>
        </div>
      </section> -->

      <section id="liked-resources">

        <h2 class="main-title"> Liked resources </h2>

        <% for (let resource in likedResources) { %>
          <div class="card-deck">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top resource-img img-fluid" src="<%= likedResources[resource].image %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title text-center"><%= likedResources[resource].title%></h5>
                <div>
                  <p class="card-text"><%= likedResources[resource].description %></p>
                  <p class="card-text"><b>Link: </b><%= likedResources[resource].url %></p>
                  <p class="card-text tag"><b>Tags:</b> <%= likedResources[resource].category_type %> </p>
              </div>
              </div>
              <div class="card-footer">
                <!-- <i class="far fa-heart"></i> -->
                <span><a href="/comments/<%=likedResources[resource].id %>"><i class="far fa-comment-dots"></i></a></span>
                <!-- <i class="far fa-star"> 4/5</i> -->
              </div>
            </div>

            <% } %>

      </section>

      <!-- <section id="loadMore">
        <div class="loadMore-btn">
          <button type="button" class="btn btn-light">Load more ...</button>
        </div>
      </section> -->



    </section>

      <% } %>
  </section>
